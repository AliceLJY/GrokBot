        text-overflow: ellipsis;
    }

    .chat-actions {
        display: flex;
        gap: 5px;
    }

    .btn-delete {
        background: none;
        border: none;
        color: #6c757d;
        cursor: pointer;
        padding: 2px 5px;
    }

