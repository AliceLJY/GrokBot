@page "/chat/{ChatId}"
@using GrokBot.Models
@using GrokBot.Services
@using GrokBot.Shared
@using System.Text.Json
@inject ChatStorageService ChatStorage
@inject GrokService GrokService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<div class="chat-container">
    @if (currentChat == null)
    {
        <div class="loading">
            <p><em>Loading chat...</em></p>
        </div>
    }
    else
    {
        <div class="chat-header">
            <h2>@currentChat.Title</h2>
            <div>
                <button class="btn btn-sm btn-outline-secondary" @onclick="RenameChat" disabled="@isProcessing">
                    <span class="oi oi-pencil"></span> Rename
                </button>
                <button class="btn btn-sm btn-outline-secondary ml-2" @onclick="NavigateToHome" disabled="@isProcessing">
                    <span class="oi oi-home"></span> Home
                </button>
            </div>
        </div>

        <div class="messages-container" @ref="messagesContainerRef">
            @if (!currentChat.Messages.Any())
            {
                <div class="empty-chat">
                    <p>Start chatting with GrokBot!</p>
                </div>
            }
            else
            {
                @foreach (var message in currentChat.Messages)
                {
                    <MessageItem Message="message" />
                }
            }
            
            @if (isProcessing)
            {
                <div class="processing-indicator">
                    <div class="dot-flashing"></div>
                    <span>GrokBot is thinking...</span>
                </div>
            }
        </div>

        <div class="chat-input-container">
            <textarea 
                @bind="userInput" 
                @bind:event="oninput" 
                @onkeydown="HandleKeyDown"
                class="chat-input" 
                placeholder="Type your message here..."
                disabled="@isProcessing"
                rows="1"></textarea>
            <button 
                class="send-button @(string.IsNullOrWhiteSpace(userInput) || isProcessing ? "disabled" : "")" 
                @onclick="SendMessage"
                disabled="@(string.IsNullOrWhiteSpace(userInput) || isProcessing)">
                <span class="oi oi-chevron-right"></span>
            </button>
        </div>
    }
</div>

@code {
    [Parameter]
    public string ChatId { get; set; } = string.Empty;

    private Chat? currentChat;
    private string userInput = string.Empty;
    private bool isProcessing = false;
    private ElementReference messagesContainerRef;
    private bool isGitHubPages;
    private bool isLoaded = false;

    protected override async Task OnInitializedAsync()
    {
        // 检查是否在 GitHub Pages 环境
        isGitHubPages = NavigationManager.BaseUri.Contains("github.io");
        
        // 记录重要信息到控制台
        await JSRuntime.InvokeVoidAsync("console.log", $"ChatPage初始化 - ChatId: {ChatId}");
        await JSRuntime.InvokeVoidAsync("console.log", $"BaseUri: {NavigationManager.BaseUri}");
        await JSRuntime.InvokeVoidAsync("console.log", $"当前URI: {NavigationManager.Uri}");
        
        // 重要：在GitHub Pages环境中，确保URL格式正确
        if (isGitHubPages)
        {
            // 在初始化时保存当前URL，以便在需要时进行参考
            await JSRuntime.InvokeVoidAsync("sessionStorage.setItem", "currentChatUrl", NavigationManager.Uri);
            await JSRuntime.InvokeVoidAsync("console.log", $"已保存当前URL到会话存储: {NavigationManager.Uri}");
        }
        
        // 加载聊天数据
        await LoadChat();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && currentChat != null)
        {
            // 第一次渲染后滚动到底部
            await ScrollToBottom();
            
            // 标记已完成加载
            isLoaded = true;
            await JSRuntime.InvokeVoidAsync("console.log", "聊天页面完成初始渲染");
        }
    }
    
    protected override async Task OnParametersSetAsync()
    {
        // 当参数(ChatId)变化时重新加载聊天
        if (isLoaded && currentChat?.Id != ChatId)
        {
            await JSRuntime.InvokeVoidAsync("console.log", $"ChatId变更: {currentChat?.Id} -> {ChatId}");
            await LoadChat();
            
            // 通知UI刷新
            StateHasChanged();
        }
    }

    private async Task LoadChat()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("console.log", $"正在加载聊天: {ChatId}");
            
            // 首先尝试从导航缓存中获取聊天
            var cachedChatJson = await JSRuntime.InvokeAsync<string>("getCachedChat", ChatId);
            if (!string.IsNullOrEmpty(cachedChatJson))
            {
                await JSRuntime.InvokeVoidAsync("console.log", "从导航缓存中加载聊天");
                
                try
                {
                    currentChat = JsonSerializer.Deserialize<Chat>(cachedChatJson, new JsonSerializerOptions { 
                        PropertyNameCaseInsensitive = true 
                    });
                    
                    if (currentChat != null)
                    {
                        await JSRuntime.InvokeVoidAsync("console.log", $"成功从缓存加载聊天: {currentChat.Id}, 消息数: {currentChat.Messages.Count}");
                        
                        // 确保我们将缓存的聊天保存到存储服务中
                        await ChatStorage.SaveChatAsync(currentChat);
                        
                        // 通知UI更新
                        StateHasChanged();
                        return;
                    }
                }
                catch (Exception ex)
                {
                    await JSRuntime.InvokeVoidAsync("console.error", $"从缓存解析聊天时出错: {ex.Message}");
                }
            }
            
            // 如果从缓存加载失败，从存储服务加载
            currentChat = await ChatStorage.GetChatByIdAsync(ChatId);
            
            if (currentChat == null)
            {
                await JSRuntime.InvokeVoidAsync("console.log", $"找不到ID为 {ChatId} 的聊天，创建新聊天");
                
                // 创建新聊天
                currentChat = new Chat 
                { 
                    Id = ChatId,
                    Title = "New Chat" 
                };
                
                await ChatStorage.SaveChatAsync(currentChat);
                await JSRuntime.InvokeVoidAsync("console.log", $"已创建新聊天: {currentChat.Id}");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("console.log", $"已加载聊天: {currentChat.Id}, 消息数: {currentChat.Messages.Count}");
                
                // 输出聊天的所有消息，用于调试
                for (int i = 0; i < currentChat.Messages.Count; i++)
                {
                    var message = currentChat.Messages[i];
                    await JSRuntime.InvokeVoidAsync("console.log", $"消息 {i+1}: {message.Role} - {message.Content.Substring(0, Math.Min(50, message.Content.Length))}...");
                }
            }
            
            // 通知UI更新
            StateHasChanged();
            
            // 确保渲染后滚动到底部
            await Task.Delay(100);
            await ScrollToBottom();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"加载聊天时出错: {ex.Message}\n{ex.StackTrace}");
            
            // 创建新的聊天作为备用选项
            currentChat = new Chat 
            { 
                Id = ChatId,
                Title = "New Chat" 
            };
            await ChatStorage.SaveChatAsync(currentChat);
            
            // 通知UI更新
            StateHasChanged();
        }
    }

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(userInput) || isProcessing || currentChat == null)
            return;

        // 保存消息内容并清空输入框
        string messageContent = userInput.Trim();
        userInput = string.Empty;
        StateHasChanged();
        
        // 添加用户消息
        var userMessage = new Message
        {
            Role = "user",
            Content = messageContent,
            Timestamp = DateTime.Now
        };
        
        currentChat.Messages.Add(userMessage);
        
        // 如果是第一条消息，设置聊天标题
        if (currentChat.Messages.Count == 1 || currentChat.Title == "New Chat")
        {
            currentChat.Title = messageContent.Length > 30 
                ? messageContent.Substring(0, 27) + "..." 
                : messageContent;
        }
        
        // 保存聊天记录
        await ChatStorage.SaveChatAsync(currentChat);
        await ScrollToBottom();
        
        // 获取Grok的回复
        isProcessing = true;
        StateHasChanged();
        
        try
        {
            var response = await GrokService.GetChatResponseAsync(currentChat);
            
            // 添加机器人回复
            var botMessage = new Message
            {
                Role = "assistant",
                Content = response,
                Timestamp = DateTime.Now
            };
            
            currentChat.Messages.Add(botMessage);
            await ChatStorage.SaveChatAsync(currentChat);
        }
        catch (Exception ex)
        {
            // 添加错误消息
            var errorMessage = new Message
            {
                Role = "assistant",
                Content = $"抱歉，发生错误: {ex.Message}",
                Timestamp = DateTime.Now
            };
            
            currentChat.Messages.Add(errorMessage);
            await ChatStorage.SaveChatAsync(currentChat);
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
            await ScrollToBottom();
        }
    }

    private async Task ScrollToBottom()
    {
        // 延迟确保DOM更新
        await Task.Delay(50); 
        await JSRuntime.InvokeVoidAsync("scrollToBottom", messagesContainerRef);
    }

    private async Task RenameChat()
    {
        if (currentChat == null)
            return;
            
        var newTitle = await JSRuntime.InvokeAsync<string>("prompt", "输入新的聊天标题:", currentChat.Title);
        
        if (!string.IsNullOrWhiteSpace(newTitle))
        {
            currentChat.Title = newTitle;
            await ChatStorage.SaveChatAsync(currentChat);
        }
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !e.ShiftKey)
        {
            // 按Enter发送，Shift+Enter换行
            await SendMessage();
        }
    }
    
    private void NavigateToHome()
    {
        try
        {
            if (isGitHubPages)
            {
                // 在GitHub Pages环境使用SPA导航
                JSRuntime.InvokeVoidAsync("eval", @"
                    try {
                        // 清除会话存储中的当前URL
                        sessionStorage.removeItem('currentChatUrl');
                        
                        // 获取基础路径
                        var baseHref = document.querySelector('base').getAttribute('href') || '/';
                        console.log('导航到首页, 基础路径:', baseHref);
                        
                        // 使用history.pushState进行SPA导航
                        history.pushState(null, '', baseHref);
                        window.dispatchEvent(new Event('popstate'));
                    } catch(e) {
                        console.error('导航错误:', e);
                        // 最终后备方案
                        window.location.href = '/grokbot/';
                    }
                ");
            }
            else
            {
                // 本地环境使用NavigationManager
                NavigationManager.NavigateTo("/");
            }
        }
        catch
        {
            // 最终后备方案
            JSRuntime.InvokeVoidAsync("window.location.href", "/grokbot/");
        }
    }
}

<style>
    .chat-container {
        display: flex;
        flex-direction: column;
        height: 100%;
        max-width: 1200px;
        margin: 0 auto;
    }

    .chat-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 0;
        border-bottom: 1px solid #dee2e6;
    }

    .messages-container {
        flex: 1;
        overflow-y: auto;
        padding: 1rem 0;
    }

    .empty-chat {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        color: #6c757d;
    }

    .chat-input-container {
        display: flex;
        padding: 1rem 0;
        border-top: 1px solid #dee2e6;
    }

    .chat-input {
        flex: 1;
        resize: none;
        border: 1px solid #ced4da;
        border-radius: 4px;
        padding: 0.5rem;
        font-size: 1rem;
        line-height: 1.5;
        overflow-y: auto;
    }

    .send-button {
        margin-left: 0.5rem;
        padding: 0.5rem 1rem;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .send-button.disabled {
        background-color: #6c757d;
        cursor: not-allowed;
    }

    .processing-indicator {
        display: flex;
        align-items: center;
        margin: 1rem 0;
        color: #6c757d;
    }

    .dot-flashing {
        position: relative;
        width: 10px;
        height: 10px;
        border-radius: 5px;
        background-color: #6c757d;
        margin-right: 10px;
        animation: dot-flashing 1s infinite linear alternate;
        animation-delay: 0.5s;
    }

    .dot-flashing::before, .dot-flashing::after {
        content: '';
        display: inline-block;
        position: absolute;
        top: 0;
    }

    .dot-flashing::before {
        left: -15px;
        width: 10px;
        height: 10px;
        border-radius: 5px;
        background-color: #6c757d;
        animation: dot-flashing 1s infinite alternate;
        animation-delay: 0s;
    }

    .dot-flashing::after {
        left: 15px;
        width: 10px;
        height: 10px;
        border-radius: 5px;
        background-color: #6c757d;
        animation: dot-flashing 1s infinite alternate;
        animation-delay: 1s;
    }

    @keyframes dot-flashing {
        0% {
            background-color: #6c757d;
        }
        50%, 100% {
            background-color: #e9ecef;
        }
    }

    .loading {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
    }
</style>
